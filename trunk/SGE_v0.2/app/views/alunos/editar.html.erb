<table cellspacing="2" cellpadding="0" border="0">
  <tr>
    <td height="50" colspan="2" align="center"><h1>Editar aluno</h1></td>
  </tr>

<% form_for(@aluno, :html => {:multipart => true}) do |f| %>
  <%= render :partial => "shared/pessoa_form", :locals => {:f => f}   %>

  <%= render :partial => "aluno_form", :locals => {:f => f}   %>
  <tr>
    <td colspan="2" align="center"><%= f.submit 'Alterar' %></td>
  </tr>
<% end %>
<tr>
  <td colspan="2" align="center"><%= link_to 'Voltar', session[:retorno] %></td>
</tr>
</table>