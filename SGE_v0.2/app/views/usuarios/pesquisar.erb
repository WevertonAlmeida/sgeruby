<div align="center">
  <p>
  <h1>Resultado da Pesquisa</h1>
</p>

<p>
<table cellpadding="0" cellspacing="0" border="1">
  <tr>
    <th align="center">Nome</th>
    <th colspan="2" align="center"><%=t :operacoes %></th>
  </tr>
  <% @usuarios.each do |usuario| %>
    <tr>
      <td style="width: 300px" align="center"><%=h usuario.nome %> </td>
      <td style="width: 90px" align="center"><%= link_to "Consultar", consultar_usuario_path(usuario) %></td>
      <td style="width: 70px" align="center"><%= link_to "Editar", editar_usuario_path(usuario) %></td>
    </tr>
  <% end %>
</table>
</p>
<p>
  <%= link_to "Voltar", usuarios_path %>
</p>
</div>