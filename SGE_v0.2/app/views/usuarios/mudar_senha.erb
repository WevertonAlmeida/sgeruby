<div align="center">
  <table>    
    <tr>
      <td align="center" colspan="2"><h2>Alterar senha</h2></td>
    </tr>
    <% if flash[:notice] %>
      <tr>
        <td align="center" height="50" colspan="2"><a style="color: red; vertical-align: middle"><%= flash[:notice] %></a></td>
      </tr>
    <% end %>
    <%= form_tag '/usuarios/mudar_senha' do %>
      <tr>
        <td align="center">Nova senha:</td>
        <td align="center"><input type="password" name="nova_senha" /></td>
      </tr>
      <tr>
        <td align="center">Repita a senha:</td>
        <td align="center"><input type="password" name="nova_senha2" /></td>
      </tr>
      <tr>
        <td align="center" colspan="2"><%= submit_tag 'Alterar' %></td>
      </tr>
    <% end %>
  </table>
</div>