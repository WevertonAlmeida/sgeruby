<div align="center">
  <p>
  <h1>Resultado da Pesquisa</h1>
</p>

<p>
<table cellpadding="0" cellspacing="0" border="1">
  <tr>
    <th align="center">Nome</th>
    <th align="center">Curso</th>
    <th colspan="2" align="center"><%=t :operacoes %></th>
  </tr>
  <% @disciplinas.each do |disciplina| %>
    <tr>
      <td style="width: 300px" align="center"><%=h disciplina.nome %> </td>
      <td style="width: 300px" align="center"><%=h disciplina.curso.nome %> </td>
      <td style="width: 90px" align="center"><%= link_to "Consultar", consultar_disciplina_path(disciplina) %></td>
      <td style="width: 70px" align="center"><%= link_to "Editar", editar_disciplina_path(disciplina) %></td>
    </tr>
  <% end %>
</table>
</p>
<p>
  <%= link_to "Voltar", disciplinas_path %>
</p>
</div>